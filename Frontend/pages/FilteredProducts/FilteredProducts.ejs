<!DOCTYPE html>
<html>

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=7,8,edge" />
	<meta http-equiv="refresh" content="text/html;charset=UTF-8" />
	<link rel="stylesheet" href="/global/global.css" />
	<link rel="stylesheet" href="/pages/FilteredProducts/css/filteredProducts.css" />
	<script defer src="pages/FilteredProducts/js/filteredProducts.js"></script>
	<title>Soap Works </title>
</head>

<body>
	<%- include("../../partials/Header/Header.ejs") %>
		<%- include("../../partials/Cart/Cart.ejs") %>
			<div class="backdrop"></div>
			<%products.forEach((product)=> {
				%>
				<div class="img-container">
					<img class="bg-img" src="<%=product.ImageUrl%>" alt="product image" />
				</div>
				<%})%>
					<section class="filter-section">
						<%products.forEach((product)=> {
							%>
							<div class="product">
								<div class="product-img">
									<img src="<%=product.ImageUrl%>" alt="product image">
								</div>
								<h2>
									<%=product.Title%>
								</h2>
								<p class="quantity">
									<%= product.Quantity ? product.Quantity: null%>
								</p>
								<p class="desc">
									<%=product.Description%>
								</p>
								<ul class="list">
									<%if (product.Ingredients) {%>
										<h3 class="list-title">Ingredients</h3>
										<%product.Ingredients.forEach((ing)=> {%>
											<li class="ingredients">
												<%=ing%>
											</li>
											<%})%>
												<%} else {%>
													<%product.Included?.forEach((include)=> {%>
														<li class="includes">
															- <%=include%>
														</li>
														<%})%>
															<%}%>
								</ul>
								<p class="price">
									$<%=product.Price%>
								</p>
								<button class="buy-btn">Add <strong>
										<%=product.Title%>
									</strong> To Cart</button>
							</div>
							<%})%>
					</section>
					<!-- <%- include('../../partials/Contact/Contact.ejs')%>
						<%- include('../../partials/Footer/Footer.ejs')%> -->
							<script type="module" src="/global/global.js"></script>
</body>

</html>